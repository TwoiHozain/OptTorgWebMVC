@using OptTorgWebDB.Models
@model Suppliers

<body class="text-center">
	<main class="w-75 position-absolute top-50 start-50 translate-middle">
		<!-- Заголовок -->
		<p class="fs-3 text-decoration-underline  fw-bold m-1">Изменить</p>
		<!-- Заголовок 2 -->
		<p class="fs-4 text-decoration-underline m-1">Поставщика</p>

		<form class="p-3 border" asp-controller="Suppliers" asp-action="CSuppliers" method="post">
			<div class="row">
				<div class="col">
					<p class="fs-5 text-decoration-underline">Расположение</p>
					<div class="row pb-1">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="State">
								<label asp-for="State">Страна</label>
								<span asp-validation-for="State" class="text-danger"></span>
							</div>
						</div>

						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Oblast">
								<label asp-for="Oblast">Область</label>
								<span asp-validation-for="Oblast" class="text-danger"></span>
							</div>
						</div>

						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="City">
								<label asp-for="City">Город</label>
								<span asp-validation-for="City" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="row pb-1">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Adress">
								<label asp-for="Adress">Адрес</label>
								<span asp-validation-for="Adress" class="text-danger"></span>
							</div>
						</div>

						<div class="col-2">
							<div class="form-floating">
								<input class="form-control" asp-for="PostIndex">
								<label asp-for="PostIndex">Индекс</label>
								<span asp-validation-for="PostIndex" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="col col-lg-3">
					<p class="fs-5 text-decoration-underline">Контактное лицо</p>
					<div class="row">
						<div class="col pb-1">
							<div class="form-floating">
								<input class="form-control" asp-for="Surname">
								<label asp-for="Surname">Фамилия</label>
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col pb-1">
							<div class="form-floating">
								<input class="form-control" asp-for="Name">
								<label asp-for="Name">Имя</label>
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Patronymic">
								<label asp-for="Patronymic">Отчество</label>
								<span asp-validation-for="Patronymic" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Position">
								<label asp-for="Position">Должность</label>
								<span asp-validation-for="Position" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>

				<div class="col col-lg-3">
					<p class="fs-5 text-decoration-underline">Контакты</p>
					<div class="row">
						<div class="col pb-1">
							<div class="form-floating">
								<input class="form-control" asp-for="Company">
								<label asp-for="Company">Организация</label>
								<span asp-validation-for="Company" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col pb-1">
							<div class="form-floating">
								<input class="form-control" asp-for="Phone">
								<label asp-for="Phone">Телефон</label>
								<span asp-validation-for="Phone" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Fax">
								<label asp-for="Fax">Факс</label>
								<span asp-validation-for="Fax" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Inn">
								<label asp-for="Inn">ИНН</label>
								<span asp-validation-for="Inn" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col m-1">
					<button class="btn btn-lg btn-success w-25" type="submit" asp-action="SaveChangesSuppliers" method="post">Создать</button>
				</div>
			</div>
		</form>

		<form class="p-1 d-grid gap-1" asp-controller="Suppliers" method="get">
			<div class="row">
				<div class="col m-1">
					<button class="btn btn-lg btn-warning w-25" type="submit" asp-action="Index">Отмена</button>
				</div>
			</div>
		</form>
	</main>
</body>


