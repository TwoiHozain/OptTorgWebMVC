@using OptTorgWebDB.Models
@model Delivery

<div class="position-relative">
	<div class="w-50 position-absolute top-50 start-50 translate-middle-x">
		<!-- Заголовок -->
		<p class="fs-3 text-decoration-underline fw-bold  m-1">Создать</p>
		<!-- Заголовок 2 -->
		<p class="fs-4 text-decoration-underline m-1">Склад</p>

		<form class="p-3 border" asp-controller="Delivery" asp-action="CreateDelivery" method="post">
			@Html.HiddenFor(model => model.StorageId)
			@Html.HiddenFor(model => model.EmployeeAcceptId)
			@Html.HiddenFor(model => model.EmployeeReceiveId)
			@Html.HiddenFor(model => model.DriverId)
			@Html.HiddenFor(model => model.TransportId)

			<div class="row">
				<div class="col">
					<p class="fs-5 text-decoration-underline">Сотрудник</p>
					<div class="row pb-1">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Osnovanie">
								<label asp-for="Osnovanie">Основание</label>
								<span asp-validation-for="Osnovanie" class="text-danger"></span>
							</div>
						</div>
					</div>
					
					<div class="row pb-1">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="NomerDoverennosti">
								<label asp-for="NomerDoverennosti">Номер доверенности</label>
								<span asp-validation-for="NomerDoverennosti" class="text-danger"></span>
							</div>
						</div>
					</div>
					
					<div class="row pb-1">
						<div class="col">
							<div class="form-floating">
								<input class="form-control" asp-for="Date">
								<label asp-for="Date">Дата доставки</label>
								<span asp-validation-for="Date" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="d-grid gap-2 col-5 mx-auto">
				<button class="btn btn-lg btn-success" type="submit" asp-action="CreateDelivery" method="post">Сохранить</button>
			</div>
		</form>

		<form class="p-1 d-grid gap-1" asp-controller="Delivery" method="get">
			<div class="d-grid gap-2 col-5 mx-auto">
					<button class="btn btn-lg btn-warning" type="submit" asp-action="TDelivery">Отмена</button>
			</div>
		</form>
	</div>
</div>

