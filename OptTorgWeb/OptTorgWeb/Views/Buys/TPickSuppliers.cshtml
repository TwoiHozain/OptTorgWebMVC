@using OptTorgWebDB.Models
@model Buys

<!DOCTYPE html>

<html>
<body class="panel-body">
	@{
		@if (ViewBag.Type == 0)
		{
			<div class="alert alert-success alert-dismissible fade show m-1" role="alert">
				@ViewBag.Message
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		@if (ViewBag.Type == 1)
		{
			<div class="alert alert-danger alert-dismissible fade show  m-1" role="alert">
				@ViewBag.Message
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}
	}
	<!-- Заголовок -->
	<p class="fs-3 text-decoration-underline fw-bold m-1">Закупка</p>
	<!-- Заголовок 2 -->
	<p class="fs-4 text-decoration-underline m-1">Выбор поставщика</p>

	<!-- Кнопка -->
	<a class="btn btn-warning m-1" style="width:15%" asp-controller="Buys" asp-action="TBuys">Отмена</a>

	<div class="table-responsive table-striped table-hover table-bordered">
		<table class="table table-bordered table-striped table-hover caption-top">
			<thead>
				<tr>
					<th>Ид</th>
					<th>Организация</th>
					<th>Фамилия</th>
					<th>Имя</th>
					<th>Отчество</th>
					<th>Должность</th>
					<th>Факс</th>
					<th>Телфон</th>
					<th>Веб-страница</th>
					<th>ИНН</th>

					<th colspan="2" class="text-center">Действия</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var e in Suppliers.GetAllSuppliers())
				{
					<tr>
						<td>@e.IdSuppliers</td>
						<td>@e.Company</td>
						<td>@e.Surname</td>
						<td>@e.Name</td>
						<td>@e.Patronymic</td>
						<td>@e.Position</td>
						<td>@e.Fax</td>
						<td>@e.Phone</td>
						<td>@e.WebPage</td>
						<td>@e.Inn</td>

						<!-- Кнопки в таблице -->
						<td style="width:1px; white-space:nowrap;">
							<form asp-controller="Buys" method="post">
								<input type="hidden" name="SupplierId"
									   value="@e.IdSuppliers" />
								<button type="submit" class="btn btn-success" asp-action="OpenPickProduct" method="post">
									Выбрать
								</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</body>
</html>
