@using OptTorgWebDB.Models
@model CountryOfProduct

<body>
	<main class="w-25 position-absolute top-50 start-50 translate-middle">
		
		<!-- Заголовок -->
		<p class="fs-3 text-decoration-underline fw-bold  m-1">Создать</p>
		<!-- Заголовок 2 -->
		<p class="fs-4 text-decoration-underline m-1">Страну производителя</p>

		<form class="p-5 border d-grid gap-2" asp-controller="CountryOfProduct" asp-action="CCountryOfProduct" method="post">

			<div class="form-floating">
				<input class="form-control" asp-for="NumericCode">
				<label asp-for="NumericCode">Код</label>
				<span asp-validation-for="NumericCode" class="text-danger"></span>
			</div>

			<div class="form-floating">
				<input class="form-control" asp-for="ShortName">
				<label asp-for="ShortName">Краткое наименование</label>
				<span asp-validation-for="ShortName" class="text-danger"></span>
			</div>

			<button class="btn btn-lg btn-success" type="submit" asp-action="CCountryOfProduct" method="post">Сохранить</button>
			<button class="btn btn-lg btn-success" type="submit" asp-action="CFewCountryOfProduct" method="post">Сохранить и добавить еще</button>
		</form>

		<form class="p-5 border d-grid gap-1" asp-controller="CountryOfProduct" method="get">
			<button class="btn btn-lg btn-warning" type="submit" asp-action="TCountryOfProduct">Отмена</button>
		</form>
	</main>
</body>

