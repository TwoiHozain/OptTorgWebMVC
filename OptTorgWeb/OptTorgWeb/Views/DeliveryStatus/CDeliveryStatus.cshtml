@using OptTorgWebDB.Models
@model DeliveryStatus

<div class="position-relative">
	<div class="w-75 position-absolute top-50 start-50 translate-middle-x">

		<!-- Заголовок -->
		<p class="fs-3 text-decoration-underline fw-bold  m-1">Создать</p>
		<!-- Заголовок 2 -->
		<p class="fs-4 text-decoration-underline m-1">Статус доставки</p>

		<form class="p-5 border d-grid gap-2" asp-controller="DeliveryStatus" asp-action="CDeliveryStatus" method="post">
			<div class="form-floating">
				<input class="form-control" asp-for="Status">
				<label asp-for="Status">Наименование статуса</label>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="d-grid gap-2 col-5 mx-auto">
				<button class="btn btn-lg btn-success" type="submit" asp-action="CDeliveryStatus" method="post">Сохранить</button>
				<button class="btn btn-lg btn-success" type="submit" asp-action="CFewDeliveryStatus" method="post">Сохранить и добавить еще</button>
			</div>
		</form>

		<form class="p-5 border d-grid gap-1" asp-controller="DeliveryStatus" method="get">
			<div class="d-grid gap-2 col-5 mx-auto">
				<button class="btn btn-lg btn-warning" type="submit" asp-action="TDeliveryStatus">Отмена</button>
			</div>
		</form>
	</div>
</div>

