@using OptTorgWebDB.Models
@model DeliveryStatus

<body class="text-center">
	<main class="w-25 position-absolute top-50 start-50 translate-middle">
		<!-- Заголовок -->
		<p class="fs-3 text-decoration-underline  fw-bold m-1">Редактировать</p>
		<!-- Заголовок 2 -->
		<p class="fs-4 text-decoration-underline m-1">Статус доставки</p>

		<form class="p-5 border d-grid gap-2" asp-controller="DeliveryStatus" asp-action="OpenEDeliveryStatus" method="post">
			<div class="form-floating">
				<input class="form-control" asp-for="IdDs" readonly>
				<label asp-for="IdDs">Ид</label>
				<span asp-validation-for="IdDs" class="text-danger" value="IdDeliveryStatus"></span>
			</div>

			<div class="form-floating">
				<input class="form-control" asp-for="Status">
				<label asp-for="Status">Наименование статуса</label>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<button class="btn btn-lg btn-success" type="submit" asp-action="SaveChangesDeliveryStatus" method="post">Сохранить</button>
		</form>

		<form class="p-5 d-grid gap-1" asp-controller="DeliveryStatus" method="get">
			<button class="btn btn-lg btn-warning" type="submit" asp-action="TDeliveryStatus" method="get">Отмена</button>
		</form>
	</main>
</body>


