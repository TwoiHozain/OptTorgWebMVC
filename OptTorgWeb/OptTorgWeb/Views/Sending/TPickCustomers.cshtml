@using OptTorgWebDB.Models
@model Sending

<!DOCTYPE html>

<html>
<body class="panel-body">
	@{
		@if (ViewBag.Type == 0)
		{
			<div class="alert alert-success alert-dismissible fade show m-1" role="alert">
				@ViewBag.Message
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		@if (ViewBag.Type == 1)
		{
			<div class="alert alert-danger alert-dismissible fade show  m-1" role="alert">
				@ViewBag.Message
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}
	}
	<!-- Заголовок -->
	<p class="fs-3 text-decoration-underline fw-bold m-1">Просмотреть</p>
	<!-- Заголовок 2 -->
	<p class="fs-4 text-decoration-underline m-1">Адреса клиентов</p>

	<div class="table-responsive table-striped table-hover table-bordered">
		<table class="table table-bordered table-striped table-hover caption-top">
			<thead>
				<tr>
					<th>Ид</th>
					<th>Организация</th>
					<th>Страна</th>
					<th>Область</th>
					<th>Город</th>
					<th>Адрес</th>
					<th>Почтовый индекс</th>

					<th colspan="2" class="text-center">Действия</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var e in Customers.GetAllCustomers())
				{
					<tr>
						<td>@e.IdCustomers</td>
						<td>@e.Company</td>
						<td>@e.State</td>
						<td>@e.Oblast</td>
						<td>@e.City</td>
						<td>@e.Adress</td>
						<td>@e.PostIndex</td>

						<!-- Кнопки в таблице -->
						<td style="width:1px; white-space:nowrap;">
							<form asp-controller="Sending" method="post">
								<input type="hidden" name="CustomerId"
									   value="@e.IdCustomers" />
								<button type="submit" class="btn btn-success" asp-action="OpenPickStorage" method="post">
									Выбрать
								</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</body>
</html>
